{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "酒款資料庫：每筆含 id, name, type, region, description, tags，供 Pinecone 向量化與智能推薦",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "type"],
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "type": { "type": "string", "enum": ["red", "white", "sparkling", "whisky", "sake", "beer", "other"] },
      "region": { "type": "string" },
      "country": { "type": "string" },
      "description": { "type": "string" },
      "tags": { "type": "array", "items": { "type": "string" } },
      "abv": { "type": "number" },
      "variety": { "type": "string" }
    }
  }
}
